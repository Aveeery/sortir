
{% extends 'layout.html.twig' %}
{% block title  %}Gestion des utilisateurs{% endblock %}

{% block body %}

    <h1>Gestion des utilisateurs</h1>

    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Phone number</th>
                    <th>Mail</th>
                    <th>Admin</th>
                    <th>Active</th>
                    <th>Campus Id</th>
                </tr>
            </thead>

            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.phoneNumber }}</td>
                    <td>{{ user.mail }}</td>
                    <td>
                        {% for role in user.roles %}
                            {% if role == "ROLE_ADMIN" %}
                                <i class="far fa-user"></i>
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        {% if user.active %}
                        <i class="fas fa-check"></i>
                            {% else %}
                                <i class="fas fa-times"></i>
                        {% endif %}
                    </td>
                    <td>{{ user.campus.name }}</td>
                    <td>
                        <form method="post" action="{{ path('admin_deactivate_user', {id :user.id }) }}">
                        {% if user.active %}
                            <button class="btn btn-danger">Désactiver</button>
                            {% else %}
                                    <button class="btn btn-danger">Réactiver</button>
                        {% endif %}
                        </form>
                    </td>
                    <td>
                        <form method="post" action="{{ path('admin_delete_user', {id :user.id }) }}">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <div>
            {{ form_start(formview) }}
            {{ form_widget(formview) }}
            <button type="submit">Ajouter</button>
            {{ form_end(formview) }}
        </div>
        <div>
            <a href="{{ path('user_admin_create_user') }}"><button><i class="fas fa-user-plus fa-lg"></i></button></a>
        </div>

        <div>
            <a href="{{ path('campus_admin') }}">Gérer les campus</a>
        </div>


    </div>

{% endblock %}
