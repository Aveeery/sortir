{% extends 'layout.html.twig' %}

{% block title %}{{ event.name }}{% endblock %}

{% block body %}
    <div class="eventDetail">
        <div class="eventDetail__colContainer">
            <div class="eventDetail__colContainer__col1">
                <h2 class="eventDetail__eventName">{{ event.name }}</h2>
                <p> <i class="far fa-calendar-alt"></i> Date et heure de la sortie : {{ event.startDate | date("d/m/Y H:i") }}</p>
                <p>Date limite d'inscription : {{ event.closingDate | date("d/m/Y") }}</p>
                <p><i class="fas fa-user-friends"></i> Nombre de places : {{ event.maxAttendees }}</p>
                <p><i class="far fa-clock"></i> Dur√©e : {{ event.duration }} minutes</p>
                <p>Description et infos : {{ event.description }}</p>
            </div>
            <div class="eventDetail__colContainer__col2">
                <p>Campus : {{ event.campus.name }}
                <p><i class="fas fa-location-arrow"></i> Lieu : {{ event.place.name }}</p>
                <p>Rue : </p>
                <p>Code postal : {{ event.place.city.postCode }}</p>
                <p>Latitude : {{ event.place.latitude }}</p>
                <p>Latitude : {{ event.place.longitude }}</p>
            </div>
        </div>


        <div class="eventDetail__attendees">
            <h3 class="eventDetail__attendees__title">Liste des participants</h3>
            <table>
                <thead>
                <td>Pseudo</td>
                <td>Nom</td>
                </thead>
                <tbody>
                {% for attendee in event.attendees %}
                    <tr>
                        <td><a href="{{ path('profile', {'id': attendee.id}) }}">{{ attendee.username }}</a></td>
                        <td>{{ attendee.firstName }} {{ attendee.lastName }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}